<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addtask_framelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:fillViewport="true"
    android:background="@drawable/back_ground"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/action_bar_view_headeradded_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/add_task_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bddd"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:gravity="center" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp"
                 >


                <EditText
                    android:id="@+id/task_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/new_edittext_back"
                    android:drawableRight="@drawable/user_icon_new"
                    android:ems="10"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="New Task"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:textColor="@color/new_text_clr"
                    android:textColorHint="@color/new_hint_edt_clr"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/check_in_text_size">

                    <requestFocus />

                </EditText>

                <TextView
                    android:id="@+id/apply_to_goal_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/new_edittext_back"
                    android:drawableRight="@drawable/download_arrow_white"
                    android:ems="10"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="Apply Goal"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:textColor="@color/new_text_clr"
                    android:textColorHint="@color/new_hint_edt_clr"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/check_in_text_size">

                </TextView>


                <TextView
                    android:id="@+id/assign_to_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/new_edittext_back"
                    android:drawableRight="@drawable/assign_wh"
                    android:ems="10"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:textColor="@color/new_text_clr"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/check_in_text_size">

                </TextView>


                <EditText
                    android:id="@+id/task_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/new_edittext_back"
                    android:drawableRight="@drawable/doller"
                    android:ems="10"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="Amount"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:textColor="@color/new_text_clr"
                    android:textColorHint="@color/new_hint_edt_clr"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/check_in_text_size">

                </EditText>



                <EditText
                    android:id="@+id/task_detail"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="20dp"
                    android:gravity="top"
                    android:background="@drawable/new_edittext_back"
                    android:ems="10"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="Task Details"
                    android:imeOptions="actionDone"
                    android:padding="12dp"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:textColor="@color/new_text_clr"
                    android:textColorHint="@color/new_hint_edt_clr"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/check_in_text_size">

                </EditText>



                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                         >

                        <ImageView
                            android:id="@+id/due_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/calender_white" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                           android:layout_marginLeft="10dp"
                            android:gravity="right|center"
                            android:text="Due Date:"
                            android:textColor="@color/main_font"
                            android:textSize="@dimen/check_in_text_size" />

                        <TextView
                            android:id="@+id/date_time_textview"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/new_text_clr"
                            android:textSize="@dimen/check_in_text_size" />




                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/new_edittext_back"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:textColor="@color/new_text_clr"
                            android:textSize="16sp"
                            android:text="Repeats:"/>

                        <TextView
                            android:id="@+id/repit_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/new_text_clr"
                            android:textSize="16sp"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp"
                            android:text="None"/>




                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_marginTop="10dp">


                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="25dp"
                            android:text="Requires Photo:"
                            android:textColor="@color/main_font"
                            android:textSize="16sp" />

                        <android.support.v7.widget.AppCompatCheckBox
                            android:layout_alignParentEnd="true"
                            android:id="@+id/chePhotoRequired"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            app:buttonTint="@android:color/white"
                            android:scaleX="1.30"
                            android:scaleY="1.30"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_marginTop="5dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_lock"
                            android:textColor="@color/white"
                            android:layout_marginRight="25dp"
                            android:textSize="16sp" />

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/chAppLock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            app:buttonTint="@android:color/white"
                            android:scaleX="1.30"
                            android:scaleY="1.30"/>


                    </LinearLayout>

                    <Button
                        android:id="@+id/save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/new_btn_back"
                        android:text="Save"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/check_in_text_size" />


                    <Button
                        android:id="@+id/cancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/new_btn_back"
                        android:text="Cancel"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/check_in_text_size" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/loadingPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:indeterminateTint="@color/pink"
                android:indeterminateTintMode="src_atop" />

        </RelativeLayout>
    </LinearLayout>


</ScrollView>