<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addtask_framelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:orientation="vertical">

            <include
                layout="@layout/action_bar_view_headeradded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/child_view_layput_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/add_task_header1"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/add_task_header2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top|center"
                    android:text="Create New Task"
                    android:textColor="@color/check_in"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/add_task_header3"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:gravity="center_horizontal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/username_password_top_bottom_margin">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/views_height"
                    android:layout_marginLeft="@dimen/add_task_left_margin"
                    android:layout_marginTop="@dimen/add_task_top_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".8"
                        android:gravity="center|left"
                        android:text="Task Name:"
                        android:textColor="@color/main_font"
                        android:textSize="@dimen/check_in_text_size" />

                    <EditText
                        android:id="@+id/task_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/add_task_textview_left_margin"
                        android:layout_marginRight="@dimen/add_task_textview_left_margin"
                        android:layout_weight="1.2"
                        android:background="@drawable/amount_edittext_border"
                        android:gravity="center"
                        android:hint="New Task"
                        android:imeOptions="actionNext"
                        android:inputType="textCapSentences"
                        android:paddingLeft="@dimen/add_task_textview_left_margin"
                        android:singleLine="true"
                        android:textColor="@color/main_font"
                        android:textColorHint="@color/edit_text_hint"
                        android:textSize="@dimen/check_in_text_size">

                        <requestFocus />

                    </EditText>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/views_height"
                    android:layout_marginLeft="@dimen/add_task_left_margin"
                    android:layout_marginTop="@dimen/add_task_top_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".8"
                        android:gravity="center|left"
                        android:text="Assign to:"
                        android:textColor="@color/main_font"
                        android:textSize="@dimen/check_in_text_size" />

                    <TextView
                        android:id="@+id/assign_to_id"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/add_task_textview_left_margin"
                        android:layout_marginRight="@dimen/add_task_textview_left_margin"
                        android:layout_weight="1.2"
                        android:background="@drawable/round_corner"
                        android:drawableEnd="@android:drawable/arrow_down_float"
                        android:gravity="center"
                        android:paddingLeft="@dimen/add_task_textview_left_margin"
                        android:paddingRight="5dp"
                        android:textAllCaps="false"
                        android:textColor="@color/main_font"
                        android:textSize="@dimen/check_in_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/views_height"
                    android:layout_marginBottom="@dimen/add_task_top_margin"
                    android:layout_marginLeft="@dimen/add_task_left_margin"
                    android:layout_marginTop="@dimen/add_task_top_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".8"
                        android:gravity="center|left"
                        android:maxLines="1"
                        android:paddingRight="@dimen/add_task_textview_left_margin"
                        android:text="Apply to:"
                        android:textColor="@color/main_font"
                        android:textSize="@dimen/check_in_text_size" />

                    <TextView
                        android:id="@+id/apply_to_goal_spinner"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/add_task_textview_left_margin"
                        android:layout_marginRight="@dimen/add_task_textview_left_margin"
                        android:layout_weight="1.2"
                        android:background="@drawable/round_corner"
                        android:drawableEnd="@android:drawable/arrow_down_float"
                        android:gravity="center"
                        android:paddingLeft="@dimen/add_task_textview_left_margin"
                        android:paddingRight="5dp"
                        android:textAllCaps="false"
                        android:textColor="@color/main_font"
                        android:textSize="@dimen/check_in_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/views_height"
                    android:layout_marginLeft="@dimen/add_task_left_margin"
                    android:layout_marginTop="@dimen/add_task_top_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".8"
                        android:gravity="center|left"
                        android:text="Amount:"
                        android:textColor="@color/main_font"
                        android:textSize="@dimen/check_in_text_size" />

                    <EditText
                        android:id="@+id/task_amount"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/add_task_textview_left_margin"
                        android:layout_marginRight="@dimen/add_task_textview_left_margin"
                        android:layout_weight="1.2"
                        android:background="@drawable/amount_edittext_border"
                        android:gravity="center"
                        android:hint="Amount"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:paddingLeft="@dimen/add_task_textview_left_margin"
                        android:singleLine="true"

                        android:textColor="@color/main_font"
                        android:textColorHint="@color/edit_text_hint"
                        android:textSize="@dimen/check_in_text_size">

                        <requestFocus />

                    </EditText>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/add_task_left_margin"
                    android:text="Task Details:"
                    android:textColor="@color/main_font"
                    android:textSize="@dimen/check_in_text_size" />

                <EditText
                    android:id="@+id/task_detail"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/add_task_left_margin"
                    android:layout_marginRight="@dimen/add_task_textview_left_margin"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext_background"
                    android:ems="10"
                    android:gravity="start"
                    android:hint="Task details"
                    android:nextFocusDown="@+id/login_remember_checkbox"
                    android:padding="8dp"
                    android:textColor="@color/main_font"
                    android:textColorHint="@color/edit_text_hint"
                    android:textSize="@dimen/check_in_text_size" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/add_task_textview_left_margin"
                            android:layout_marginTop="5dp"
                            android:gravity="right|center"
                            android:text="Due Date:"
                            android:textColor="@color/main_font"
                            android:textSize="@dimen/check_in_text_size" />

                        <TextView
                            android:id="@+id/date_time_textview"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:layout_toLeftOf="@+id/due_date"
                            android:gravity="left"
                            android:textColor="@color/main_font"
                            android:textSize="@dimen/check_in_text_size" />

                        <ImageView
                            android:id="@+id/due_date"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@android:color/transparent"
                            android:padding="2dp"
                            android:src="@drawable/calender" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/add_task_textview_left_margin"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:maxLines="1"
                            android:paddingRight="@dimen/add_task_textview_left_margin"
                            android:text="@string/app_lock"
                            android:textColor="@color/main_font"
                            android:textSize="@dimen/check_in_text_size" />

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/chAppLock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            app:buttonTint="@android:color/white"
                            android:scaleX="1.30"
                            android:scaleY="1.30"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:visibility="gone">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:maxLines="1"
                            android:paddingRight="@dimen/add_task_textview_left_margin"
                            android:text="@string/real_time_money"
                            android:textColor="@color/main_font"
                            android:textSize="@dimen/check_in_text_size" />

                        <Button
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/round_corner"
                            android:gravity="center"
                            android:padding="2dp"
                            android:textColor="@color/main_font" />

                    </RelativeLayout>


                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp">


                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingRight="@dimen/add_task_textview_left_margin"
                            android:text="Requires Photo:"
                            android:textColor="@color/main_font"
                            android:textSize="@dimen/check_in_text_size" />

                        <android.support.v7.widget.AppCompatCheckBox
                            android:layout_alignParentEnd="true"
                            android:id="@+id/chePhotoRequired"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            app:buttonTint="@android:color/white"
                            android:scaleX="1.30"
                            android:scaleY="1.30"/>

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="right|center"
                            android:orientation="horizontal">


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="right|center"
                            android:orientation="horizontal">


                        </LinearLayout>

                        <RelativeLayout


                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/add_task_left_margin"
                            android:layout_marginTop="5dp">


                        </RelativeLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.1">

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/cancel"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:background="@drawable/sign_in_round"
                                android:text="Cancel"
                                android:textAllCaps="false"
                                android:textColor="@color/main_font"
                                android:textSize="@dimen/check_in_text_size" />

                            <Button
                                android:id="@+id/save"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="50dp"
                                android:layout_weight="1"
                                android:background="@drawable/sign_in_round"
                                android:text="Save"
                                android:textAllCaps="false"
                                android:textColor="@color/main_font"
                                android:textSize="@dimen/check_in_text_size" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="bottom"
                            android:layout_weight="0.2"
                            android:gravity="bottom"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/addtask_helpicon"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_weight=".3"
                                android:background="@color/background"
                                android:src="@drawable/ic_help_white_24dp" />

                            <TextView
                                android:id="@+id/helpicon_textview"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.47"
                                android:textColor="@color/main_font"
                                android:textSize="@dimen/check_in_text_size" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/add_task_textview_left_margin"
                                android:layout_weight="1.05"
                                android:gravity="right|center" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/loadingPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:indeterminateTint="@color/pink"
                android:indeterminateTintMode="src_atop" />

        </RelativeLayout>
    </LinearLayout>


</ScrollView>