<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.ParentProfile">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#24479b"
        android:paddingLeft="12dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp">


        <ImageButton
            android:id="@+id/ivBackArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:background="@android:color/transparent"
            android:src="@drawable/back_icon_new" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Profile"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />


        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/user_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:src="@drawable/icon"
            app:siBorderAlpha="0.0"
            app:siBorderColor="@android:color/white"
            app:siBorderWidth="0dp"
            app:siRadius="0dp"
            app:siSquare="false" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <EditText
                    android:id="@+id/parent_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/new_edittext_back"
                    android:drawableRight="@drawable/user_icon_new"
                    android:ems="10"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="First Name"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailSubject"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:textColor="@color/new_text_clr"
                    android:textColorHint="@color/new_hint_edt_clr"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/check_in_text_size">

                    <requestFocus />

                </EditText>


                <EditText
                    android:id="@+id/last_name_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/new_edittext_back"
                    android:drawableRight="@drawable/user_icon_new"
                    android:ems="10"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="Last Name"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:textColor="@color/new_text_clr"
                    android:textColorHint="@color/new_hint_edt_clr"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/check_in_text_size">

                </EditText>


                <EditText
                    android:id="@+id/parent_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/new_edittext_back"
                    android:drawableRight="@drawable/email_icon_new"
                    android:ems="10"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="Email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:textColor="@color/new_text_clr"
                    android:textColorHint="@color/new_hint_edt_clr"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/check_in_text_size">

                </EditText>


                <EditText
                    android:id="@+id/parent_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/new_edittext_back"
                    android:drawableRight="@drawable/mobile_icon_new"
                    android:ems="10"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="Phone"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:textColor="@color/new_text_clr"
                    android:textColorHint="@color/new_hint_edt_clr"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/check_in_text_size">

                </EditText>


                <TextView
                    android:id="@+id/parent_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/profile_edittext_margin"
                    android:layout_marginBottom="@dimen/profile_edittext_margin"
                    android:drawableRight="@drawable/pencil"
                    android:drawablePadding="@dimen/profile_edittext_margin"
                    android:gravity="center_vertical"
                    android:paddingTop="@dimen/username_password_top_bottom_margin"
                    android:singleLine="true"
                    android:text="@string/change_password_text"
                    android:textAllCaps="false"
                    android:textColor="@color/new_text_clr"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/task_date_header" />

                <TextView
                    android:id="@+id/chil_list_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/username_password_top_bottom_margin"
                    android:gravity="center|left"
                    android:paddingTop="10dp"
                    android:text="Chindren list"
                    android:textColor="@color/new_text_clr"
                    android:textSize="@dimen/sign_in_text_size"
                    android:visibility="gone" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/child_list_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/parent_add_child"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:drawableRight="@drawable/add_child_nw"
                    android:gravity="center"
                    android:text="@string/add_child_text"
                    android:textColor="@color/new_text_clr"
                    android:textSize="@dimen/task_date_header"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/save_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/new_btn_back"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/check_in_text_size" />


                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/new_btn_back"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/check_in_text_size" />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/pink"
            android:indeterminateTintMode="src_atop" />

    </RelativeLayout>

</LinearLayout>