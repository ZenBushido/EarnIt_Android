<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_child"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <ImageButton
        android:id="@+id/ivBackArrow"
        android:layout_width="50dp"
        android:layout_marginLeft="-15dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@android:color/transparent"
        android:src="@drawable/arrow_left" />

    <ImageButton
        android:id="@+id/calendarBtn_child"
        android:layout_width="50dp"
        android:layout_marginLeft="-15dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_event_black_36dp" />

    <TextView
        android:layout_marginLeft="-15dp"
        android:id="@+id/textView_child"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:text="Welcome Back!"
        android:textColor="@color/main_font"
        android:textSize="@dimen/sign_in_text_size" />

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/imageView_child"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|end"
        android:layout_marginEnd="10dp"
        android:paddingLeft="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/logo"
        android:visibility="gone"
        app:siBorderColor="@android:color/white"
        app:siBorderWidth="1.5dp"
        app:siRadius="1dp"
        app:siSquare="true" />

</android.support.v7.widget.Toolbar>