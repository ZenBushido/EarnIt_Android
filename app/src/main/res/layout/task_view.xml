<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/task_list_bottom_margin"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/taskName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".75"
        android:paddingLeft="@dimen/check_in_padding"
        android:textAlignment="textStart"
        android:textColor="@android:color/white"
        android:textSize="@dimen/check_in_text_size" />

    <TextView
        android:id="@+id/childtaskName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:gravity="right"
        android:paddingRight="@dimen/check_in_padding"
        android:textColor="@android:color/white"
        android:textSize="@dimen/check_in_text_size" />

</LinearLayout>