<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/childlist_left_padding"
    android:paddingRight="5dp"
    android:paddingTop="5dp">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/chid_avater_id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin=".5dp"
        android:layout_weight=".15"
        android:src="@drawable/default_avatar"
        app:siBorderColor="@android:color/white"
        app:siBorderWidth="1dp"
        app:siRadius="1dp"
        app:siSquare="true" />

    <TextView
        android:id="@+id/child_fullname_id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".85"
        android:gravity="center|left"
        android:paddingLeft="@dimen/profile_edittext_margin"
        android:textColor="@color/main_font"
        android:textSize="@dimen/check_in_text_size" />

    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/delete" />

</LinearLayout>