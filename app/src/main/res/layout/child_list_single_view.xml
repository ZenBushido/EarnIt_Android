<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingTop="1dp"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5d83d8"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/childlist_left_padding"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:orientation="horizontal">
    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/chid_avater_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/icon"
        app:siBorderAlpha="0.0"
        app:siBorderColor="@android:color/white"
        app:siBorderWidth="0dp"
        app:siRadius="0dp"
        app:siSquare="false" />

    <TextView
        android:id="@+id/child_fullname_id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".85"
        android:gravity="center|left"
        android:paddingLeft="15dp"
        android:textColor="@color/main_font"
        android:textSize="@dimen/check_in_text_size" />

    <ImageButton

        android:layout_gravity="center"
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:background="@drawable/child_list_close" />
    </LinearLayout>
</LinearLayout>